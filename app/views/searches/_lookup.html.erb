<div id="etf-lookup">
    <h3>Search for ETFS by ticker symbol</h3>
    <%= form_tag new_search_path, remote: true, method: :get, id: 'etf-lookup-form' do %>
    <div class="form-group row no-padding text-center col -md-12">
      <div class="col-md-10">
        <%= text_field_tag :etf, params[:etf], placeholder: "ETF ticker symbol EX: SPY", autofocus: true, class: 'form-control search-box input-lg' %>
      </div>
      <div class='col-md-2'>
        <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Lookup an ETF
        <% end %>
      </div>
    </div>
    <% end %>
</div>
